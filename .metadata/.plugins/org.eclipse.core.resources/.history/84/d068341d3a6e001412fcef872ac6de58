import java.util.Arrays;

public class Arrays2 {

	public static void main(String[] args) {
		//statistics();
		usingArraysClass();
	}
	public static void statistics(){
		int []arr1 ={93, 44, 17, 50, 9, 17, 50};//array 1

		int total=0;
		for(int a:arr1){
			total+=a;
		}
		System.out.println("Total= "+total);

		double average=0;
		for(int a:arr1){
			average+=a;
		}
		average = average/arr1.length;
		System.out.println("Average= "+average);
		
		double median = calcMedian(arr1);
		System.out.println("Median= "+median);
		
		double range = calcRange(arr1);
		System.out.println("Range= "+range);
		
		int []arr2 ={8, -6, 89, 17, 12, 6};//array 2
		int average2=0;
		for(int a:arr2){
			average2+=a;
		}
		average2 = average2/arr2.length;
		System.out.println("\nAverage= "+average2);
		
		double median2 = calcMedian(arr2);
		System.out.println("Median= "+median2);
		
	}
	public static double calcMedian(int []arr){//middle value
		int middle= arr.length/2;
		int median = arr[middle];
		Arrays.sort(arr);
		
		if(arr.length%2==0){
			return (arr[middle] + (arr[middle-1])) /2;
		}else{
			return median;
		}
	}
	public static double calcRange(int[] arr) {
		Arrays.sort(arr);
		int range = (arr[arr.length-1] - arr[0]);
		System.out.println(range);
		return range;
	}
	public static void usingArraysClass(){
		double []grades ={92.3, 44.9, 76.9, 73.2};
		Arrays.sort(grades);
		for(double g:grades){
			System.out.println("Grade is "+g);
		}
		double []low = Arrays.copyOfRange(grades, 0, 2);
		for(double g:low){
			System.out.println("ranges is "+g);
		}
		double []high = Arrays.copyOfRange(grades, 2, 5);
		for(double g:high){
			System.out.println("ranges is "+g);
		}
	}
//	 copyOfRange(original from to )
	
