	<h:outputStylesheet library="css" name="styles.css" /> </h:head>
<h:body>
	<h1>Tables example 1</h1>
	<h:form>
		<h:dataTable value="#{tableData.names}" var="name"
		styleClass="nameTable"
		headerClass="nameTableHeader"
		rowClasses="nameTableOddRow,nameTableEvenRow">
		<h:column>
			<f:facet name="header"><h:commandLink action="#{tableData.sortByLastName}">Last Name</h:commandLink></f:facet>
			<h:inputText value="#{name.last}" size ="10" rendered="#{name.canEdit}"/>
			<h:outputText value="#{name.last}" size ="10" rendered="#{not name.canEdit}"/>
		</h:column>

		<h:column>
			<f:facet name="header"><h:commandLink action="#{tableData.sortByFirstName}">First Name</h:commandLink></f:facet>
			<h:inputText value="#{name.first}" size ="10" rendered="#{name.canEdit}"/>
			<h:outputText value="#{name.first}" size ="10" rendered="#{not name.canEdit}"/>
		</h:column>

		<h:column>
			<f:facet name="header">Edit</f:facet>
			<h:commandButton value="Edit" action="#{tableData.editName(name)}"
			rendered="#{not name.canEdit}"/>
		</h:column>
		
		<h:column>
			<f:facet name="header">Delete</f:facet>
			<h:commandButton value="Delete" action="#{tableData.deleteName(name)}"
			rendered="#{not name.canEdit}"/>
		</h:column>

		</h:dataTable>
	<h:commandButton value="Save Changes" action="#{tableData.saveAction}"/>
	<h3>Add Name</h3>
	<table>
	<tr>
		<td>First Name: </td>
		<td><h:inputText size="10" value="#{tableData.firstName}"/></td>
	</tr>
	<tr>
		<td>Last Name: </td>
		<td><h:inputText size="10" value="#{tableData.lastName}"/></td>
	</tr>
	<tr>
		<td></td>
		<td><h:commandButton value="Add Name" action="#{tableData.addName}"/></td>
	</tr>
	
	</table>
	</h:form>
