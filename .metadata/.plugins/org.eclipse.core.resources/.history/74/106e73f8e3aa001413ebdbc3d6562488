		System.out.println("Starting " + HANDLER_COUNT + "order handlers.\n");
		
		String s = "Ordertaker threads          OrderHandler Threads";
		System.out.println(s);
		
		for(int i = 0; i < TAKER_COUNT; i++){
			OrderTaker t = new OrderTaker(ORDER_COUNT, queue);
			t.start();
		}
